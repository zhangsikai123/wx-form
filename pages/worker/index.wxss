/* pages/worker/index.wxss */
.bg-box {
    width: 100%;
    height: 150px;
    z-index: 1;
}

.bg-box image{
    z-index: 1;
    width: 100%;
    height: 100%;
}

.head-box {
    z-index: 9999;
    height: 100px;
    margin: 10rpx 18rpx;
    border-radius: 16rpx;
    background-color: #fff;
    box-shadow: 10px 10px 5px rgba(39, 48, 57, 0.05);
}

.userAvatar-box {
    width: 60px;
    height: 60px;
    margin-top: 20px;
    margin-left: 10px;
    float: left;
}

.userlogin {
    /* width: 60px; */
    height: 100%;
    margin-left: 20px;
    float: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.content-box {
    margin: 10rpx 18rpx;
    border-radius: 16rpx;
    background-color: #ffffff;
    box-shadow: 10px 10px 5px rgba(39, 48, 57, 0.05);
}

.content-title {
    height: 30px;
    line-height: 30px;
    padding-left: 5px;
    font-weight: bold;
    /* background-color: hotpink; */
}

.content-row {
    height: 35px;
    margin-top: 8px;
    border-bottom: 1rpx #f0f0f0 solid;
}

.content-icon {
    width: 25px;
    height: 25px;
    margin-left: 10px;
    margin-top: 5px;
    float: left;
    /* background-color: #2fdf17; */
}

.content-icon image {
    width: 25px;
    height: 25px;
    /* background-color: #2fdf17; */
}

.content-text {
    height: 35px;
    line-height: 35px;
    margin-left: 50px;
}

.form-list-box{
    position: relative;
    box-sizing: border-box;
    padding: 8px 16px;
    font-size: 12px;
    color: #323233;
    margin-top:5px;
    background-color: #ffffff;
}

.card {
    display: flex;
    display: -webkit-flex;
}

.card-left {
    position: relative;
    -webkit-box-flex: none;
    flex: none;
    width: 90px;
    height: 90px;
    margin-top: 10px;
    margin-right: 8px;
}

.card-left image {
    width:100%;
    height: 100%;
}

.card-right {
    position: relative;
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
}

.card-title {
    font-size: 14px;
    font-weight: 900;
    line-height: 16px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

